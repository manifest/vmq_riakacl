<?xml version="1.0" encoding="UTF-8" ?>
<schema name="default" version="1.5">

	<fields>
		<field name="account_id" type="string" indexed="false" stored="false" multiValued="false"/>
		<field name="exp" type="int" indexed="false" stored="false" multiValued="false"/>
		<field name="cat" type="tint" indexed="false" stored="false" multiValued="false"/>
		<field name="qos" type="int" indexed="false" stored="false" multiValued="false"/>
		<field name="retain" type="boolean" indexed="false" stored="false" multiValued="false"/>
		<field name="service" type="string" indexed="false" stored="false" multiValued="false"/>
		<field name="limit" type="int" indexed="false" stored="false" multiValued="false"/>

		<!-- All of these fields are required by Riak Search -->
		<field name="_yz_id" type="_yz_str" indexed="true" stored="true" multiValued="false" required="true"/>
		<field name="_yz_ed" type="_yz_str" indexed="true" stored="false" multiValued="false"/>
		<field name="_yz_pn" type="_yz_str" indexed="true" stored="false" multiValued="false"/>
		<field name="_yz_fpn" type="_yz_str" indexed="true" stored="false" multiValued="false"/>
